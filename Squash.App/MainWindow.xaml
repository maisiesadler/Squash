<Window x:Class="Squash.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Squash.App"
        mc:Ignorable="d"
        Title="Squash" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="0">
            <local:TextInput Title="Title" x:Name="TitleInput" />
            <local:TextInput Title="InputDirectory" x:Name="InputDirectoryInput" IsFileDialog="True" Height="80" />
            <local:TextInput Title="OutputDirectory" x:Name="OutputDirectoryInput" IsFileDialog="True" Height="80" />
            <WrapPanel HorizontalAlignment="Right">
                <Button Content="Save Config" Width="75" Click="SaveConfig_Click" />
            </WrapPanel>
        </StackPanel>
        <Button Content="Generate" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="75" Margin="0,0,0,20" Click="Generate_Click"/>
    </Grid>
</Window>
